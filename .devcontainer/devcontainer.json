// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python & MariaDB",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"runServices": [
		"app",
		"db"
	],
	"workspaceFolder": "/workspace",
	"initializeCommand": "cp .env .devcontainer/.env",
	"postStartCommand": "rm -f .devcontainer/.env", 
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers-contrib/features/poetry:2": {}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"python.pythonPath": "./.venv/bin/python",
				"python.defaultInterpreterPath": "./.venv/bin/python",
				"editor.defaultFormatter": "ms-python.black-formatter",
				"python.testing.pytestPath": "/usr/local/py-utils/bin/pytest",
				"editor.formatOnSave": true,
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "zsh"
					}
				},
				"terminal.integrated.defaultProfile.linux": "zsh",
				"sqltools.connections": [
					{
						"mysqlOptions": {
							"authProtocol": "default",
							"enableSsl": "Disabled"
						},
						"previewLimit": 50,
						"server": "${containerEnv:MARIADB_HOST}",
						"port": "${containerEnv:MARIADB_PORT}", 
						"driver": "MariaDB",
						"name": "${containerEnv:APP_NAME}-root",
						"database": "${containerEnv:MARIADB_DATABASE}",
						"username": "root",
						"password": "${containerEnv:MARIADB_ROOT_PASSWORD}"
					}
				]
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"tamasfe.even-better-toml",
				"dbaeumer.vscode-eslint",
				"Vue.volar",
				"Vue.vscode-typescript-vue-plugin",
				"GitHub.copilot",
				"usernamehw.errorlens",
				"Gruntfuggly.todo-tree",
				"ms-python.black-formatter",
				"GitHub.vscode-pull-request-github",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-mysql",
				"ms-python.pylint",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"forwardPorts": [
		"${containerEnv:MARIADB_PORT}:${containerEnv:MARIADB_PORT}"
	],
	"postCreateCommand": "chmod +x .devcontainer/post-install.sh && .devcontainer/post-install.sh",
	"remoteUser": "vscode"
}